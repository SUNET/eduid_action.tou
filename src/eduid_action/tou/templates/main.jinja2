                <div class="col-xs-12 col-sm-6">
                    <input class="btn btn-success" type="submit" name="accept" id="accept" value="{{ _('accept') }}">
                </div>
                <div class="col-xs-12 col-sm-6">
                    <input class="btn btn-danger" type="submit" name="reject" id="reject" value="{{ _('reject') }}">
